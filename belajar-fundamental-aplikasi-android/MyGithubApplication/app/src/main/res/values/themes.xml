<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGithubApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="Theme.MyGithubApplication" parent="Base.Theme.MyGithubApplication" />

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_gray</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextContent.Title">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.TitleDetails">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.SubtitleDetails">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/detail_text</item>
    </style>

    <style name="TextContent.Details">
        <item name="android:textSize">15sp</item>
    </style>
</resources>